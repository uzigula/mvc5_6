@model YoVoy.Web.Models.InscribirseViewModel
<div id="InscripcionFormContainer">
    @using (Html.BeginForm("Inscribirse", "Eventos",FormMethod.Post,
       new
       {
           id = "IncripcionForm",
           @class = "form-horizontal",
           role = "form"
       }
    ))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.EventoId)
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-hidden="true">
                        &times;
                    </button>
                    <h4>@Model.Titulo</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.NombreAsistente,
                      new { @class = "col-sm-5 control-label" })
                        <div class="col-sm-7">
                            @Html.TextBoxFor(m => m.NombreAsistente,
                        new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NumeroEntradas,
                      new { @class = "col-sm-5 control-label" })
                        <div class="col-sm-7">
                            @Html.TextBoxFor(m => m.NumeroEntradas,
                        new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-default"
                            data-dismiss="modal">
                        Cerrar
                    </button>
                    <button type="submit"
                            class="btn btn-success">
                        Inscribirme
                    </button>
                </div>
            </div>
        </div>
    }
</div>